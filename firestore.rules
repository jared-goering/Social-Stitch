rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own session data
    match /sessions/{sessionId} {
      allow read, write: if true; // For demo purposes - in production, use proper auth
      
      match /accounts/{platform} {
        allow read, write: if true;
      }
    }
    
    // Saved styles collection
    match /styles/{styleId} {
      allow read, write: if true; // For demo purposes - in production, use proper auth
    }
    
    // User mockups collection
    match /users/{userId} {
      allow read, write: if true; // For demo purposes - in production, use proper auth
      
      match /mockups/{mockupId} {
        allow read, write: if true;
      }
    }
    
    // Scheduled posts collection
    match /scheduledPosts/{postId} {
      allow read, write: if true; // For demo purposes - in production, use proper auth
    }
    
    // Shop-scoped data for Shopify embedded app
    match /shops/{shopDomain} {
      allow read, write: if true; // For demo purposes - in production, validate shop ownership
      
      match /mockups/{mockupId} {
        allow read, write: if true;
      }
      
      match /scheduledPosts/{postId} {
        allow read, write: if true;
      }
      
      match /settings/{document=**} {
        allow read, write: if true;
      }
      
      match /brandProfile/{document=**} {
        allow read, write: if true;
      }
      
      // Subscription subcollection (shops/{shopDomain}/subscription/{docId})
      match /subscription/{document=**} {
        allow read: if true;
        allow write: if true; // For demo - in production, restrict to server-side only
      }
      
      // Monthly usage tracking (shops/{shopDomain}/usage/{monthKey})
      match /usage/{monthKey} {
        allow read: if true;
        allow write: if true; // For demo - in production, restrict to server-side only
      }
    }
    
    // User-scoped subscription and usage (for standalone mode)
    match /users/{userId} {
      // Subscription subcollection (users/{userId}/subscription/{docId})
      match /subscription/{document=**} {
        allow read: if true;
        allow write: if true; // For demo - in production, restrict to server-side only
      }
      
      // Monthly usage tracking
      match /usage/{monthKey} {
        allow read: if true;
        allow write: if true; // For demo - in production, restrict to server-side only
      }
    }
  }
}

